{
  "name": "simple-crypto",
  "version": "0.0.1",
  "description": "encode and decode any 14 bit signed integer",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run lint && npm run test && babel src -d dist",
    "lint": "eslint ./src",
    "test": "nyc mocha --compilers js:babel-core/register --require ./test/setup.js 'test/**/*.@(js)'",
    "validate": "npm-run-all --parallel lint test"
  },
  "author": "Olivier Oudry",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-core": "6.22.1",
    "babel-preset-es2015": "6.22.0",
    "chai": "3.5.0",
    "eslint": "3.14.0",
    "ghooks": "2.0.0",
    "mocha": "3.2.0",
    "npm-run-all": "4.0.1",
    "nyc": "10.1.2",
    "rimraf": "2.5.4"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ]
  },
  "dependencies": {
    "commander": "2.9.0"
  },
    "config": {
      "ghooks": {
        "pre-commit": "npm run validate"
      }
    }
}
